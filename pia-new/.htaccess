RewriteEngine  on

RewriteRule ^$	www/html/work.html [QSA,L]

RewriteRule ^opgaver$	www/html/work.html [QSA,L]
RewriteRule ^kontakt$	www/html/contact.html [QSA,L]
RewriteRule ^kunder$	www/html/customers.html [QSA,L]
RewriteRule ^butik$	www/html/shop.html [QSA,L]

RewriteRule ^butik/(.*)$	www/html/shop.html [QSA,L]
RewriteRule ^opgaver/(.*)$	www/html/work.html [QSA,L]

# Old gallery:
RewriteRule ^www/gallery.html$	www/html/shop.html [QSA,L]
RewriteRule ^www/gallery_([a-z_]*).html$	www/html/shop.html [QSA,L]

# Backend:
RewriteRule ^www/order$ /www/php/order.php [QSA,L]
RewriteCond %{HTTP:Authorization} ^Basic.*
RewriteRule ^www/auth$  /www/php/auth.php?Authorization=%{HTTP:Authorization} [QSA,L]

#RewriteCond %{THE_REQUEST} "^[^ ]* .*?\.php[? ].*$"
#RewriteRule .* - [L,R=404]

IndexIgnore .htaccess */.??* *~ *# */HEADER* */README* */_vti*

<Files .htaccess>
order allow,deny
deny from all
</Files>

<Limit GET POST>
order deny,allow
deny from all
allow from all
</Limit>

<Limit PUT DELETE>
order deny,allow
deny from all
</Limit>
